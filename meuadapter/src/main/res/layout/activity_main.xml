<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/textMarca"
        android:hint="Marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/textModelo"
        android:hint="Modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/textOrigemDestino"
        android:hint="Origem/destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/textTipo"
        android:hint="Tipo (leito/comun)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/textQntdAcentos"
        android:hint="Qntd de acentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/textQntdacentosOcupados"
        android:hint="Qntd de acentos ocupados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Adicionar onibus"
        android:onClick="novoOnibus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:layout_margin="20dp"
        android:id="@+id/listViewOnibus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>